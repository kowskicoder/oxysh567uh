{
  "manifest_version": 3,
  "name": "Bantah Companion",
  "version": "0.1.0",
  "description": "Quick access to Bantah web app: open the site or quick routes from the browser toolbar.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bantah"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"]
}
{
  "manifest_version": 3,
  "name": "BetChat - Social Betting Extension",
  "version": "1.0.0",
  "description": "Quick access to BetChat social betting platform with real-time notifications",
  "permissions": [
    "activeTab",
    "notifications",
    "storage",
    "background",
    "tabs"
  ],
  "host_permissions": [
    "https://*.replit.app/*",
    "https://*.replit.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "BetChat - Social Betting",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "overlay.js", "overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}